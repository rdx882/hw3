<!-- Place details page -->

<h1><%=@place.name%></h1>

<ul>
  <% for entry in @entries %>
    <li>
      <h3><%= @entry["title"] %></h3>
    </li>
    <li>
      <%= @entry["occurred_on"] %>
    </li>
    <li>
      <p>
        <%= @entry["occurred_on"] %>
      </p>
    </li>
    <hr>
  <% end %>
</ul>

<p><a href="/entries/new?place_id=<%=@place.id%>">Add a New Entry!</a></p>

<p><a href="/places/">Back to Places</a></p>

