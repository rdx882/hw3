<%= form_with :model => @entry do |form| %>
  <p>
    <%= form.label "title", "Entry Title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "occurred_on", "Date" %>
    <%= form.date_field "occurred_on" %>
  </p>
  <p>
    <%= form.label "description", "Description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.label "place_id" %>
    <%= form.text_field "place_id" %>
  </p>
  <%= form.submit %>
<% end %>